{% extends 'MSBundle:Enquete:index.html.twig' %}

{% block style %}

    {{ parent() }}
    <style>
        input
        {
            border-radius: 20px;
            text-align: center;
        }
        tr , td, th{
            border: hidden;
            text-align: left;
        }
    </style>
    <script type="text/javascript" src="{{ asset('bundles/ms/js/new_enquete.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ms/js/anis.popup.js') }}"></script>
{% endblock %}
{% block content %}

    <h1 style="text-align: center">Nouvelle Enquete</h1>


        <div id="erreurs" style="color: red">{{ form_errors(form) }}</div>
        <div class="art-layout-wrapper clearfix">
            <div class="art-content-layout">
                <div class="art-content-layout-row">
                    <div class="art-layout-cell art-content clearfix">
                        <article class="art-post art-article">


                            <div class="art-postcontent art-postcontent-0 clearfix">
                                <div class="art-content-layout-wrapper layout-item-0">
                                    <div class="art-content-layout layout-item-1">
                                        <div class="art-content-layout-row">
                                            <div class="art-layout-cell layout-item-2" style="width: 50%" >
                                                <form action="{{ path('enquete_create') }}" method="post" {{ form_enctype(form) }}>
                                                    {{ form_widget(form._token) }}
                                                    <table class="art-article" style="box-shadow: 5px 5px 1px #222;border-radius: 20px ;background-color: #E6E6E6 ;width: 80%;margin-left: 10%">
                                                        <tr style="height: 20px"></tr>
                                                        <tr>
                                                            <td style="text-align: center">

                                                                <strong >Titre</strong>
                                                            </td>
                                                            <td >
                                                                {{ form_widget(form.titre) }}
                                                                {{ form_errors(form.titre) }}
                                                            </td>
                                                            </tr>
                                                        <tr style="height: 20px"></tr>
                                                        <tr style="margin-top: 50px">
                                                            <td style="padding: 10px;text-align: center">
                                                                <strong>{{ form_label(form.campagne) }}</strong>
                                                                </td>
                                                            <td>
                                                                {{ form_errors(form.campagne) }}
                                                                {{ form_widget(form.campagne) }}
                                                            {#</td>
                                                            </tr>
                                                            <tr>
                                                            <td></td>
                                                            <td style="text-align: center;padding-top: 20px;padding-left: 20px">#}
                                                                &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                                                <strong >{{ form_label(form.dateDebut) }}</strong>

                                                                {{ form_errors(form.dateDebut) }}
                                                                {{ form_widget(form.dateDebut) }}

                                                                <strong >{{ form_label(form.dateFin) }}</strong>
                                                                {{ form_errors(form.dateFin) }}
                                                                {{ form_widget(form.dateFin) }}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>Equipes</th>
                                                            <td>
                                                                {{ form_widget(form.equipes) }}<a class="art-button" style="border: hidden;background-color: #2e8b57;color: #009933"  onclick="affecterEnqueteEquiupes();">Affecter les Equipes</a>
                                                            </td>
                                                        </tr>
                                                        <tr style="height: 20px"></tr>
                                                        <tr>
                                                            <td style="text-align: center">
                                                                <label for="pfe_v3_mobsurveybundle_enquetetype_description" ><strong>{{ form_label(form.description) }}</strong></label>
                                                            </td>
                                                            <td style="max-width: 400px">
                                                                {{ form_errors(form.description) }}
                                                                <textarea id="pfe_v3_mobsurveybundle_enquetetype_description" name="pfe_v3_mobsurveybundle_enquetetype[description]" style="margin: 0; width: 600px; height: 100px;max-width: 600px;border-radius: 20px;padding: 10px"></textarea>
                                                            </td>
                                                        </tr>

                                                        <tr style="height: 20px"></tr>

                                                        <tr><td><button class="art-button" style="border: hidden;background-color: #2e8b57;color: #009933" type="submit">Cr&eacuteer</button></td><td></td></tr>
                                                    </table>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </article>

                    </div>
                </div>
            </div>
        </div>

{% endblock %}
