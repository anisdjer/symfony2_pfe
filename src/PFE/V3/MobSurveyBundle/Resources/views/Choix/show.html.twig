{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Choix</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Valeur</th>
                <td>{{ entity.valeur }}</td>
            </tr>
            <tr>
                <th>Chtype</th>
                <td>{{ entity.chType }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('choix') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('choix_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('choix_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
