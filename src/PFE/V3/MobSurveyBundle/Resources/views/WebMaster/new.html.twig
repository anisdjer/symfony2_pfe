{% extends 'MSBundle:WebMasterDomain:accounts.html.twig' %}

{% block style %}

    {{ parent() }}
    <style>
    input
    {
        border-radius: 20px;
        text-align: center;
    }
        tr , td, th{
            border: hidden;
            text-align: left;
        }
    </style>
{% endblock %}
{% block content %}
    <h1 style="text-align: center">Nouveau Admin</h1>

    <form action="{{ path('users_webmaster_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form._token) }}
        {#<table style="border: hidden">#}

        <div class="art-layout-wrapper clearfix">
            <div class="art-content-layout">
                <div class="art-content-layout-row">
                    <div class="art-layout-cell art-content clearfix">
                        <article class="art-post art-article">


                            <div class="art-postcontent art-postcontent-0 clearfix">
                                <div class="art-content-layout-wrapper layout-item-0">
                                    <div class="art-content-layout layout-item-1">
                                        <div class="art-content-layout-row">
                                            <div class="art-layout-cell layout-item-2" style="width: 50%" >
        <table class="art-article" style="box-shadow: 5px 5px 1px #222;border-radius: 20px ;background-color: #E6E6E6 ;width: 80%;margin-left: 10%">
            <tr style="width: 30%">
                <td>
                    <img src="{{ asset('uploads/ms/users/photos/profile.png')}}" width="100" height="100" />
                    <br>
                    <div style="width: 50px">
                        <input style="display: none"
                               type="file" id="pfe_v3_mobsurveybundle_webmastertype_photo"
                               name="pfe_v3_mobsurveybundle_webmastertype[photo]" value="uploads/ms/users/photos/profile.png" >
                        {#<input style="margin-left: 10px;width: 80px" type="button" value="Photo" onclick="$('#pfe_v3_mobsurveybundle_webmastertype_photo').click();">#}
                        <a style="margin-left: 10px;width: 50px" class="art-button" onclick="$('#pfe_v3_mobsurveybundle_webmastertype_photo').click();">Photo</a>
                    </div>
                </td>
                <td>
                    <table style="width: 100%;height: 100%;border: hidden">
                        <tr><th style="text-align: left; width: 50%"><label>Nom</label>{{ form_widget (form.nom) }}</th><th style="text-align: left"><label>Prenom</label>{{ form_widget(form.prenom) }}</th></tr>
                        <tr style="height: 10px;"><td></td><td></td></tr>
                        <tr style="height: 10px;"><td></td><td></td></tr>
                        <tr><th style="text-align: left; width: 50%"><label>Username<span style="color: red">*</span></label>{{ form_widget (form.username) }}</th><th style="text-align: left"><label>Email<span style="color: red">*</span></label>{{ form_widget(form.email) }}</th></tr>
                        <tr style="height: 10px;"><td></td><td></td></tr>
                        <tr style="height: 10px;"><td></td><td></td></tr>
                        <tr><th style="text-align: left; width: 50%"><label>Password<span style="color: red">*</span></label>{{ form_widget (form.password) }}</th><th style="text-align: left"><label>Verification Password<span style="color: red">*</span></label><input type="password" required="required"/></th></tr>
                    </table>
                </td>

            </tr>
            <tr>
                <td colspan="2" style="height: 20px"></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <table style="width: 100%">
                        <tr>
                            <th style="text-align: left; width: 50%">
                                <label>Telephone</label>
                                {{ form_widget(form.tel) }}
                            </th>
                            <th style="text-align: left">
                                <label>CIN</label>
                                {{ form_widget(form.cin) }}
                            </th>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td></td>
                <th style="text-align: left"><label>Address</label>

                    <textarea  id="pfe_v3_mobsurveybundle_webmastertype_address" name="pfe_v3_mobsurveybundle_webmastertype[address]" style="margin: 0px; height: 32px; min-width: 95%;max-width: 95%;min-height: 100px;border-radius: 20px;padding: 10px"></textarea>
                </th>
            </tr>
            <tr><td><button class="art-button" style="border: hidden;background-color: #2e8b57;color: #009933" type="submit">Create</button></td></tr>
            </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </div>
                </div>
            </div>


    </form>

{% endblock %}
